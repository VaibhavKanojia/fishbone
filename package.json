{
	"name": "fishbone",
	"displayName": "Fishbone / Ishikawa analysis",
	"description": "Create interactive fishbone diagrams for a systematic defect/failure analysis.",
	"version": "1.8.2",
	"license": "CC-BY-NC-SA-4.0",
	"publisher": "mbehr1",
	"author": {
		"name": "Matthias Behr",
		"email": "mbehr+fishbone@mcbehr.de"
	},
	"icon": "fishbone-icon2.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/mbehr1/fishbone.git"
	},
	"bugs": {
		"url": "https://github.com/mbehr1/fishbone/issues"
	},
	"homepage": "https://mbehr1.github.io/fishbone/",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Visualization",
		"Data Science",
		"Other"
	],
	"keywords": [
		"defect",
		"analysis",
		"Ishikawa"
	],
	"activationEvents": [
		"onCommand:fishbone.addNewFile",
		"onCustomEditor:fishbone.fba"
	],
	"main": "./out/extension/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fishbone.addNewFile",
				"title": "New fishbone"
			}
		],
		"customEditors": [
			{
				"viewType": "fishbone.fba",
				"displayName": "Fishbone Analysis",
				"selector": [
					{
						"filenamePattern": "*.fba"
					}
				]
			}
		]
	},
	"scripts": {
		"prepare": "husky install",
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./ && npm run build:webview",
		"build:webview": "yarn --cwd ./src/webview build",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"watch:webview": "webpack --watch --mode development",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.1",
		"@commitlint/config-conventional": "^12.1.1",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@types/glob": "^7.1.1",
		"@types/js-yaml": "^4.0.1",
		"@types/mocha": "^8.2.2",
		"@types/node": "^14.14.44",
		"@types/request": "^2.48.5",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"eslint": "^7.26.0",
		"glob": "^7.1.7",
		"husky": "^6.0.0",
		"mocha": "^8.4.0",
		"semantic-release": "^17.4.2",
		"semantic-release-vsce": "^3.3.0",
		"typescript": "^4.2.4",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"js-yaml": "^4.1.0",
		"jsonpath": "^1.1.1",
		"request": "^2.88.2",
		"vscode-extension-telemetry": "^0.1.7"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "docs",
							"scope": "readme",
							"release": "patch"
						}
					]
				}
			],
			[
				"@semantic-release/release-notes-generator",
				{
					"preset": "conventionalcommits",
					"presetConfig": {
						"types": [
							{
								"type": "feat",
								"section": "Features"
							},
							{
								"type": "fix",
								"section": "Bug Fixes"
							},
							{
								"type": "chore",
								"hidden": true
							},
							{
								"type": "docs",
								"hidden": true
							},
							{
								"type": "style",
								"section": "Other",
								"hidden": false
							},
							{
								"type": "test",
								"hidden": true
							},
							{
								"type": "perf",
								"section": "Performance",
								"hidden": false
							},
							{
								"type": "refactor",
								"section": "Other",
								"hidden": false
							}
						]
					}
				}
			],
			[
				"@semantic-release/changelog",
				{
					"changelogFile": "CHANGELOG.md",
					"changelogTitle": "# Change log for 'Fishbone':"
				}
			],
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			[
				"semantic-release-vsce",
				{
					"packageVsix": "fishbone.vsix"
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "fishbone.vsix",
							"label": "Fishbone Visual Studio Code extension package"
						}
					]
				}
			],
			[
				"@semantic-release/git",
				{
					"message": "chore(release): ${nextRelease.version} [skip ci]"
				}
			]
		],
		"preset": "conventionalcommits"
	}
}
